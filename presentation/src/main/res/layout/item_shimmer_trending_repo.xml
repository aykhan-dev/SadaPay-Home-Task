<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/size_placeholder_image"
        android:layout_height="38dp"
        android:background="@drawable/bg_shimmer"
        android:layout_margin="@dimen/single_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_profile_name"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_shimmer"
        android:layout_marginHorizontal="@dimen/single_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintTop_toTopOf="@id/iv_profile"
        tools:text="ternaus" />

    <View
        android:id="@+id/tv_repo_name"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_shimmer"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginEnd="@dimen/single_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_profile_name"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
        app:layout_constraintVertical_bias="1"
        tools:text="retinaface" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_trending_repos"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>